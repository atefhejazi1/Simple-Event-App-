<%- include('../partials/header.ejs'); %>
    <%- include('../partials/navbar.ejs'); %>


        <div class="container">
            <div class="row">
                <div class="col">
                    <h2 class="display-4">Show Single Events</h2>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= event.title %>
                            </h5>
                            <hr>
                            <p class="card-text">
                                <%= event.description %>
                            </p>
                            <p class="card-text">
                                <%= event.location %>
                            </p>

                            <p> <span class="badge bg-secondary">
                                    <%= event.date %>
                                </span></p>
                            <p><span class="badge bg-danger">
                                    <%= event.created_at %>
                                </span></p>



                            <a href="<%= '/events/edit/' + event.id %>" class="btn btn-primary">Edit</a>
                            <a href="<%= '/events/delete/' + event.id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <%- include('../partials/footer.ejs'); %>